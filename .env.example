# Common
DATABASE_URL=postgres://YOUR_SUPABASE_USER:YOUR_SUPABASE_PASSWORD@YOUR_SUPABASE_HOST:5432/postgres
DATABASE_SSL=true

# Gateway Configuration
GATEWAY_PORT=4000
FRONTEND_ORIGIN=http://localhost:3000
BRAIN_SERVICE_URL=http://localhost:8000
GATEWAY_INTERNAL_URL=http://localhost:4000

# Internal API Security
INTERNAL_API_KEY=your-secure-internal-api-key-min-32-chars
BRAIN_INTERNAL_SECRET=your-brain-internal-secret-min-32-chars

# Session Security (CRITICAL: Use strong secrets in production)
SESSION_SECRET=your-super-secure-session-secret-minimum-32-characters-long
SESSION_MAX_AGE_HOURS=24
UPSTASH_REDIS_URL=rediss://default:your-upstash-token@us1-shared-redis.upstash.io:6379
# Optional if Upstash provides separate token field
UPSTASH_REDIS_TOKEN=your-upstash-rest-token

# Cookie Configuration
USER_COOKIE_NAME=eclipsn_session
# USER_COOKIE_DOMAIN=.yourdomain.com  # Set for production
# USER_COOKIE_SAMESITE=strict         # strict|lax|none
# USER_COOKIE_SECURE=true             # Auto-detected based on HTTPS

# Environment Detection
# NODE_ENV=production                  # Set for production
# HTTPS=true                          # Set if using HTTPS

# Security Configuration
ENABLE_SECURITY_HEADERS=true
# ADDITIONAL_ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# URL Routing (Optional: leave NEXT_PUBLIC_GATEWAY_URL unset to use Next.js proxy)
# NEXT_PUBLIC_GATEWAY_URL=https://gateway.yourdomain.com
# GATEWAY_PROXY_TARGET=http://localhost:4000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:4000/api/gmail/callback
GMAIL_TOKEN_ENC_KEY=your-32-byte-hex-key-for-token-encryption
# GMAIL_TOKEN_KEY_ID=v1

# Brain Service
OPENAI_API_KEY=your-openai-or-compatible-api-key
BRAIN_ENABLE_OPENAI=true
TAVILY_API_KEY=your-tavily-api-key
GATEWAY_INTERNAL_SECRET=your-brain-internal-secret-min-32-chars
